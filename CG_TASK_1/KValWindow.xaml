<Window x:Class="CG_TASK_1.KValWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CG_TASK_1"
        mc:Ignorable="d"
        Title="KValWindow" Height="130" Width="150">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Enter the value of K:" Margin="0 0 0 5"/>
            <TextBox x:Name="KTextBox" Width="100" Margin="0 0 0 10"/>
            <Button Content="Apply" Click="ApplyButton_Click" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
