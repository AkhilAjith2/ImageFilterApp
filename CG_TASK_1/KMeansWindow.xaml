<Window x:Class="CG_TASK_1.KMeansWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CG_TASK_1"
        mc:Ignorable="d"
        Title="KMeansWindow" Height="130" Width="190">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="K:" Grid.Row="0" Margin="5"/>
        <TextBox x:Name="KTextBox" Grid.Row="0" Grid.Column="1" Width="100" Margin="5"/>
        <!--<TextBlock Text="Max Iterations:" Grid.Row="1" Margin="5"/>
        <TextBox x:Name="MaxIterationsTextBox" Grid.Row="1" Grid.Column="1" Width="100" Margin="5"/>-->
        <Button Content="Apply" Grid.Row="2" Grid.ColumnSpan="2" Click="ApplyButton_Click" Margin="5"/>
    </Grid>
</Window>